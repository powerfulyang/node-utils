{
  "name": "@powerfulyang/node-utils",
  "version": "1.3.0",
  "description": "common utils",
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/es/index.mjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "sideEffects": false,
  "author": {
    "name": "powerfulyang",
    "email": "i@powerfulyang.com",
    "url": "https://powerfulyang.com"
  },
  "homepage": "https://github.com/powerfulyang/node-utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerfulyang/node-utils.git"
  },
  "bugs": {
    "url": "https://github.com/powerfulyang/node-utils/issues"
  },
  "license": "MIT",
  "keywords": [
    "utils",
    "Node.js"
  ],
  "files": [
    "dist",
    "src"
  ],
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:source": "rollup -c",
    "build:types": "tsc -p tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "prettier": "prettier \"src/**/*.ts\" --write",
    "lint:js": "eslint --ext .ts ./src --fix",
    "test": "jest",
    "tsc-check": "tsc --noEmit",
    "precommit": "npm run tsc-check && npm run test && lint-staged",
    "postprepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@powerfulyang/lint": "3.1.0",
    "@rollup/plugin-node-resolve": "14.0.1",
    "@rollup/plugin-typescript": "8.5.0",
    "@types/sharp": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "sharp": "*",
    "@powerfulyang/utils": "*"
  }
}
